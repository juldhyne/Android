<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/user_lvl"
            android:src="@drawable/user_pic"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Nom PrÃ©nom"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mail"
                android:text="Adresse Mail"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/password_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-200dp"
            android:background="@drawable/password_icon"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="onListClickManager"
            />
        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/user_edit"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="onListClickManager"/>
        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/delete_icon"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="onListClickManager"
            />


    </LinearLayout>



</LinearLayout>