<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:id="@+id/ll_automaton_management"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <View
            android:layout_marginTop="-80dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:textCursorDrawable="@color/DarkGrey"
                android:background="@drawable/input_style"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="60dp"
                android:hint="DB"
                android:inputType="number"
                android:id="@+id/et_automaton_DBbinary"
                android:layout_marginTop="6dp"/>
            <EditText
                android:textCursorDrawable="@color/DarkGrey"
                android:background="@drawable/input_style"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="225dp"
                android:hint="BINARY"
                android:inputType="number"
                android:id="@+id/et_automaton_binary"
                android:layout_marginTop="6dp"/>
            <ImageButton
                android:id="@+id/btn_confirm_binary"
                android:onClick="onAutomatonClickManager"
                android:background="@drawable/circular_button"
                android:src="@drawable/send_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                ></ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">
            <EditText
                android:textCursorDrawable="@color/DarkGrey"
                android:background="@drawable/input_style"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="60dp"
                android:inputType="number"
                android:hint="DB"
                android:id="@+id/et_automaton_DBinteger"
                android:layout_marginTop="6dp"/>
            <EditText
                android:textCursorDrawable="@color/DarkGrey"
                android:background="@drawable/input_style"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="225dp"
                android:inputType="number"
                android:hint="INTEGER"
                android:id="@+id/et_automaton_integer"
                android:layout_marginTop="6dp"/>
            <ImageButton
                android:id="@+id/btn_confirm_integer"
                android:onClick="onAutomatonClickManager"
                android:background="@drawable/circular_button"
                android:src="@drawable/send_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                ></ImageButton>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>